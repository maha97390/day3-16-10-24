#include<stdio.h>
#include<conio.h>
#include<string.h>
void main()
{

    char a[100];
    printf("Enter a sentance");
    gets(a);
    int l=strlen(a);
    int count=0;
    for( int i=0;i<l;i++)
    {
        if(a[i]==' ' && a[i+1]!='  ')
        {
            count++;
        }
    }
    printf("No of words are: %d",count+1);
}
